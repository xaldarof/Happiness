<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="12dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        tools:layout_editor_absoluteX="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lifeBtn"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="@drawable/life_item_style"
                android:elevation="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline2">

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progress_barLife"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView4"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/life_counterTv"
                    app:layout_constraintWidth_percent="0.6"
                    app:rpbBackgroundColor="#4CAF50"
                    app:rpbBackgroundTextColor="#FFFFFF"
                    app:rpbCornerRadius="2dp"
                    app:rpbCornerRadiusBottomLeft="4dp"
                    app:rpbCornerRadiusBottomRight="4dp"
                    app:rpbCornerRadiusTopLeft="4dp"
                    app:rpbCornerRadiusTopRight="4dp"
                    app:rpbProgress="40"
                    app:rpbProgressColor="#30CC36"
                    app:rpbProgressTextColor="#FFFFFF"
                    app:rpbShowProgressText="true"
                    app:rpbTextSize="18sp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineLife"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.35" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_goldfish"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="ЖИЗНЬ"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/guidelineLife"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/life_counterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_alignStart="@+id/tv1"
                    android:text="120 Советов"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guidelineLife" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/successBtn"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="@drawable/success_item_style"
                android:elevation="8dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lifeBtn"
                app:layout_constraintWidth_percent="0.49">

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progress_barSuccess"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="@+id/successCountTv"
                    app:layout_constraintWidth_percent="0.55"
                    app:rpbBackgroundColor="#9783A8"
                    app:rpbBackgroundTextColor="#FFFFFF"
                    app:rpbCornerRadius="2dp"
                    app:rpbCornerRadiusBottomLeft="4dp"
                    app:rpbCornerRadiusBottomRight="4dp"
                    app:rpbCornerRadiusTopLeft="4dp"
                    app:rpbCornerRadiusTopRight="4dp"
                    app:rpbProgress="60"
                    app:rpbProgressColor="#64408A"
                    app:rpbProgressTextColor="#FFFFFF"
                    app:rpbShowProgressText="true"
                    app:rpbTextSize="18sp" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_goal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/bold"
                    android:text="УСПЕХ"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/successCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_alignStart="@+id/tv3"
                    android:text="35 Советов"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/tv3"
                    app:layout_constraintTop_toBottomOf="@+id/tv3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/happyBtn"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/happy_item_style"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@+id/lifeBtn"
                app:layout_constraintWidth_percent="0.49">

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progress_barHappy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="@+id/happyCounterTv"
                    app:layout_constraintWidth_percent="0.55"
                    app:rpbBackgroundColor="#9783A8"
                    app:rpbBackgroundTextColor="#FFFFFF"
                    app:rpbCornerRadius="2dp"
                    app:rpbCornerRadiusBottomLeft="4dp"
                    app:rpbCornerRadiusBottomRight="4dp"
                    app:rpbCornerRadiusTopLeft="4dp"
                    app:rpbCornerRadiusTopRight="4dp"
                    app:rpbProgress="10"
                    app:rpbProgressColor="#64408A"
                    app:rpbProgressTextColor="#FFFFFF"
                    app:rpbShowProgressText="true"
                    app:rpbTextSize="18sp" />


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_diagram"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/happyCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/bold"
                    android:text="СЧАСТЬЕ"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/happyCounterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/happyCountTv"
                    android:layout_alignStart="@+id/happyCountTv"
                    android:text="90 Советов"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/happyCountTv"
                    app:layout_constraintTop_toBottomOf="@+id/happyCountTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loveBtn"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/love_item_style"
                android:elevation="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/successBtn">

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progress_barLove"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="@+id/loveCountTv"
                    app:layout_constraintWidth_percent="0.55"
                    app:rpbBackgroundColor="#9783A8"
                    app:rpbBackgroundTextColor="#FFFFFF"
                    app:rpbCornerRadius="2dp"
                    app:rpbCornerRadiusBottomLeft="4dp"
                    app:rpbCornerRadiusBottomRight="4dp"
                    app:rpbCornerRadiusTopLeft="4dp"
                    app:rpbCornerRadiusTopRight="4dp"
                    app:rpbProgress="80"
                    app:rpbProgressColor="#64408A"
                    app:rpbProgressTextColor="#FFFFFF"
                    app:rpbShowProgressText="true"
                    app:rpbTextSize="18sp" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineLove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.35" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_talk"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Л ЮБОВЬ"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/guidelineLove"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/loveCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv7"
                    android:layout_alignStart="@+id/tv7"
                    android:text="300 Советов"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guidelineLove" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        app:dotsColor="#FFC107"
        app:dotsSize="12dp"
        app:dotsWidthFactor="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>