<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/item_style"
    android:layout_margin="12dp"
    android:elevation="4dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_margin="16dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_achievement_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="196dp"
        android:layout_toEndOf="@+id/img"
        android:background="@color/to_right_color"
        app:layout_constraintBottom_toBottomOf="@+id/achBodyTv"
        app:layout_constraintEnd_toEndOf="@+id/achBodyTv"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/achBodyTv" />

    <TextView
        android:id="@+id/achBodyTv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/img"
        android:text="Поздравляем вы \nзавершили раздел Любовь"
        android:textColor="@color/to_right_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/achDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/img"
        android:text="20:20"
        android:layout_margin="8dp"
        android:textColor="@color/to_right_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/dort"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>